<form>
    <div class="post-editor">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="think of a cool title" data-bind="textInput: title" />
        </div>
        <div class="form-group">
            <textarea data-bind="value: description, froala: description, froalaOptions: $parent.descriptionFroalaOptions"></textarea>
        </div>
        <div class="form-group">
            <textarea data-bind="value: content, froala: content, froalaOptions: $parent.contentFroalaOptions"></textarea>
        </div>

        <div class="form-group">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="add a new category or select one or more below" data-bind="textInput: $parent.categoryToAdd" />
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" data-bind="click: function(){ $parent.addCategory($parent.categoryToAdd); }"><i class="fa fa-plus"></i></button>
                </span>
            </div>
        </div>

        <div class="form-group">
            <div class="categories" data-bind="visible: $parent.categories().length > 0, validationElement: categories">
                <!-- ko  foreach: $parent.categories -->
                @*<button data-bind="css: { selected: isSelected() }, click: function(){ $root.toggleSelectedCategoryForNewPost($data); }" class="category">
                    <span data-bind="text: name"></span> <i class="fa fa-check"></i>
                </button>*@
                <button data-bind="css: { selected: isSelected }, click: function(){ $root.toggleSelectedCategory($data, $parentContext.$data.categories); }" class="category">
                    <span data-bind="text: name"></span> <i class="fa fa-check"></i>
                </button>
                <!-- /ko -->
            </div>


            @*<div class="validationMessage" data-bind="visible: categories.isModified() && !categories.isValid()">
                    <i class="fa fa-arrow-circle-up blinking"></i> <span data-bind="validationMessage: categories"></span>
                </div>*@

        </div>
    </div>
</form>
