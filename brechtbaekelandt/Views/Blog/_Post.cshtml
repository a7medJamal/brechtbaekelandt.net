<article class="post">
    <div class="post-title">
        <h3>
            <a asp-area="" asp-controller="Blog" asp-action="Post" asp-route-id="@this.Model.InternalTitle">@this.Model.Title</a>
        </h3>
        <small>
            <i><a href="mailto:@this.Model.User.EmailAddress">@this.Model.User.Name</a></i>
            |
            <i>@this.Model.Created.ToLongDateString() - @this.Model.Created.ToShortTimeString()</i>
            |
            @if (this.Model.CommentCount > 0)
            {
            <i><span>comments:</span> @this.Model.CommentCount</i>
            }
            else
            {
            <i>no comments yet...</i>
            }
        </small>
        @if (User.Identity.IsAuthenticated)
        {
        <small class="pull-right"><a asp-area="" asp-controller="blog" asp-action="edit" asp-route-id="@this.Model.Id">edit post</a> | <a asp-area="" asp-controller="blog" asp-action="delete" asp-route-id="@this.Model.Id">delete post</a></small>
        }
    </div>
    <div class="post-categories-comments">
        <hr />
        @foreach (var category in this.Model.Categories)
        {
        <span class="label label-default">@category.Name</span>
        }
        <hr />
    </div>
    <div class="post-content">
        @if (!string.IsNullOrEmpty(this.Model.PictureUrl))
            {
        <img src="@this.Model.PictureUrl" class="img-thumbnail" />
        }

        @Html.Raw(this.Model.Description)

        <div class="clearfix"></div>

        @Html.Raw(this.Model.Content)
    </div>
    <div class="clearfix"></div>
    <div class="post-share">
        <hr />
        <div class="addthis_inline_share_toolbox" data-url="@Url.Action("Post", "Blog", new { internalTitle = this.Model.InternalTitle }, "http", "brechtbaekelandt.net" )" data-title="@this.Model.Title" data-description="@this.Model.Description"></div>
        <hr />
    </div>
</article>